{% if currencies|length > 1 %}
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {% for currency in currencies %}
        {% if currency.symbol_left and currency.code == code %}{{ currency.symbol_left }} {{ text_currency }}
        {% elseif currency.symbol_right and currency.code == code %}  {{ text_currency }} {{ currency.symbol_right }}
        {% endif %}
        {% endfor %}
        <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-currency">
          {% for currency in currencies %}
              {% if currency.symbol_left %}
            <li>
              <a href="{{ currency.code }}" name="{{ currency.code }}"> {{ currency['symbol_left'] }} {{ currency.title
                  }} </a>
            </li>
              {% else %}
                <li>
                  <a href="{{ currency.code }}" name="{{ currency.code }}"> {{ currency.title }} {{ currency
                      .symbol_right }}</a>
                </li>
              {% endif %}
          {% endfor %}
        <input type="hidden" name="code" value="" />
        <input type="hidden" name="redirect" value="{{ redirect }}" />
      </form>
    </ul>
  </li>
